<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gal.udc.evilcorp.lookaround">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <meta-data android:name="unityplayer.SkipPermissionsDialog" android:value="true" />

    <!-- permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- feature -->
    <!--uses-feature android:name="android.hardware.camera" -->
    <!--uses-feature android:name="android.hardware.camera2.full"-->
    <uses-feature android:name="android.hardware.location.gps" />

    <!-- application -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lookaround" tools:replace="android:icon,android:theme"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- main activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- first launch -->
        <activity
            android:name="gal.udc.evilcorp.lookaround.util.FirstLaunch"
            android:label="@string/app_intro"
            android:screenOrientation="portrait"/>

        <!--
            Because android:exported is set to "false",
            the service is only available to this app.
        -->
        <service android:name=".util.GeolocationService"
            android:exported="false"/>

    </application>

</manifest>