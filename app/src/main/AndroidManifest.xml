<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gal.udc.evilcorp.lookaround">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <!-- permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- feature -->
    <uses-feature android:name="android.hardware.location.gps" />

    <!-- application -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lookaround" tools:replace="android:icon,android:theme"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- main activity -->
        <!-- https://stackoverflow.com/questions/5913130/dont-reload-application-when-orientation-changes -->
        <!-- launchMode = singleTask to avoid multiple instances and keep in the stack -->
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- first launch -->
        <activity
            android:name="gal.udc.evilcorp.lookaround.util.FirstLaunch"
            android:label="@string/app_intro"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleInstance"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Unity launch -->
        <activity
            android:name="gal.udc.evilcorp.lookaround.UnityPlayerActivity"
            android:label="@string/vuforia"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!--
            Because android:exported is set to "false",
            the service is only available to this app.
        -->
        <service android:name=".util.GeolocationService"
            android:exported="false"/>

    </application>

</manifest>